{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"] // <<< để TS biết 'process', Buffer, v.v.
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
